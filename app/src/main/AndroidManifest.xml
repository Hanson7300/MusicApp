<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayingActivity"
            android:label="@string/playing" />
        <activity
            android:name=".SongInfoActivity"
            android:label="@string/songInfo" />
        <activity
            android:name=".MyPlayListActivity"
            android:label="@string/playList" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/search" />
        <activity
            android:name=".BuyActivity"
            android:label="@string/buy" />
        <activity android:name=".RadioActivity"
            android:label="@string/radio"/>
        <activity android:name=".RankListActivity"
            android:label="@string/rankingList"/>
        <activity android:name=".SettingsActivity"
            android:label="@string/settings"/>
        <activity android:name=".FeaturedActivity"
            android:label="@string/featured"></activity>
    </application>

</manifest>